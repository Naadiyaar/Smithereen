{# @pebvariable name="users" type="smithereen.model.User[]" #}
{% extends "profile_module" %}
{% block moduleContent %}
<table width="100%" cellpadding="0" cellspacing="0" border="0">
	{% for friend in users %}
		{% if loop.first or loop.index==3 %}<tr valign="top" class="membersRow">{% endif %}
		<td align="center" width="33%" style="overflow: hidden;">
			<a href="{{ friend.profileURL }}"{{ profileRel(friend) }}>
				{{ friend | pictureForAvatar('a') }}<br/>
				<span class="memberName">{{ friend.firstName }}<br/>{{ friend.lastName }}</span>
			</a>
		</td>
		{%if loop.index==2 or loop.index==5 %}</tr>{% endif %}
	{% endfor %}
	{% if users.size%3!=0 %}
		<td colspan="{{ 3-users.size%3 }}" width="{{ (3-users.size%3)*33 }}%">&nbsp;</td></tr>
	{% endif %}
</table>
{% endblock %}

