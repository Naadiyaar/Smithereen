{% extends "page" %}
{% block content %}
{% include "bookmarks_tabbar" with {'tab': 'photos'} %}
<div class="mediaGridW">
<div class="summaryWrap">
	<div class="summary">{{ L('bookmarks_X_liked_photos', {'count': totalItems}) }}</div>
</div>
{% if items is empty %}
<div class="singleColumn"><div class="emptyState">{{ L('bookmarks_photos_empty') }}</div></div>
{% else %}
<div class="photoGrid">
{% block photosInner %}
{% for photo in items %}
    <a href="{{ photo.url }}" class="photo" onclick="return openPhotoViewer(this)" data-pv="{{ json(photoViewerData[photo.id]) }}">{{ photo.image | pictureForPhoto('m', false) }}</a>
{% endfor %}
{% endblock %}
{% include "pagination_endless" %}
</div>
{% endif %}
</div>
{% endblock %}